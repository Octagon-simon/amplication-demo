datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Todo {
  content   String   @unique
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String   @unique
  updatedAt DateTime @updatedAt
}